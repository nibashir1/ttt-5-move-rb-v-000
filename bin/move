#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
def turn(board)
  puts "Please enter 1-9:"
  input = gets.strip
  puts input
end

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"

move(board, 4, "O")
move(board, 4, "X")
move(board, 5, "X")
move(board, 5, "O")

display_board(board)

turn(board)
